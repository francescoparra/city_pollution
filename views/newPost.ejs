<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
    <main>
      <h2>Create A New Report</h2>
      <section class="new-report-section">
        <form
          method="POST"
          action="/insert"
          class="new-report-form"
          enctype="multipart/form-data"
        >
          <div class="input-div">
            <label class="label" for="city"> City: </label>
            <input
              class="input-element"
              type="text"
              name="city"
              id="city"
              placeholder="Milan, London, ecc."
              maxlength="25"
              required
            />
          </div>

          <div class="input-div">
            <label class="label" for="description"> Status: </label>

            <select class="status" name="status" id="status" required>
              <option>Good</option>
              <option>Moderate</option>
              <option>Unhealthy</option>
              <option>Very Unhealthy</option>
              <option>Hazardous</option>
            </select>
          </div>

          <div class="input-div">
            <label class="label" for="description"> Comment: </label>

            <textarea
              class="input-element"
              name="comment"
              id="comment"
              placeholder="Today the air is clean!"
              maxlength="254"
              required
            ></textarea>
          </div>

          <div class="input-div">
            <label class="label" for="user"> User: </label>

            <input
              class="input-element"
              type="text"
              name="user"
              placeholder="Mario Rossi"
              id="user"
              maxlength="40"
              required
            />
          </div>

          <div class="input-div">
            <label class="label" for="image"> Image: </label>

            <input
              class="input-element"
              type="file"
              name="image"
              id="image"
              required
            />
          </div>

          <% if(error != 0){ %>
            <p class="error"><%= error %> </p> 
          <% } %> 
          <div class="input-div">
            <button type="submit" class="submit-button">Submit</button>
          </div>
        </form>
      </section>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
